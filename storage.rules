rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to media folder
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to upload to team folder
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow all authenticated uploads (fallback)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
